<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#edeff2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:gravity="center"
            android:background="#FFFFFF"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/upi1" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/connect_help"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_above="@+id/bottomLogoLayout"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layoutid"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="156dp"
                            android:layout_height="156dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#ffffff"
                            android:layout_gravity="center_horizontal">



                                />
                           <!-- <ImageView
                                android:id="@+id/qrImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal" />
-->


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:paddingTop="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="4dp"
                        android:background="#a99999"
                        >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:background="#F2F2F2"
                           android:id="@+id/tablayoutid"

                            >



                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#fff"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#000"
                                    android:layout_marginLeft="3dp"
                                    android:text="Requested Amount"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Rs. "
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:textColor="#000"

                                    />
                                <TextView
                                    android:id="@+id/amtId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text=""
                                    android:textColor="#000"
                                    android:gravity="right"
                                    android:layout_gravity="right"


                                    />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#fff"
                                android:padding="8dp"
                                android:id="@+id/qrserviceRowId"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#000"
                                    android:text="Service Charge (Incl GST)"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Rs. "
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:textColor="#000"

                                    />
                                <TextView
                                    android:id="@+id/qrservicechanrgeId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text=""
                                    android:textColor="#000"
                                    android:gravity="right"
                                    android:layout_gravity="right"


                                    />
                            </TableRow>


                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#f2f2f2"
                                android:padding="8dp"

                                android:id="@+id/qrtotamountRowId"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#000"
                                    android:layout_marginLeft="3dp"
                                    android:text="Total amount to be paid"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Rs. "
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:textColor="#000"

                                    />

                                <TextView
                                    android:id="@+id/qrtotalamtId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text=""
                                    android:textColor="#000"
                                    android:gravity="right"
                                    android:layout_gravity="right"

                                    />
                            </TableRow>





                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <Button
                        android:text="Check Status       "
                        android:layout_width="wrap_content"
                        android:id="@+id/checkStatusUpiQr"
                        android:layout_marginLeft="110dp"
                        android:layout_column="12"
                        android:layout_marginTop="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:id="@+id/msgId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In case you have done payment click on verfy payment"
                        android:layout_below="@+id/proceedtoPayId"
                        android:layout_marginTop="200dp"
                        android:padding="10dp"
                        />

                    <Button
                        android:id="@+id/proceedtoPayId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proceed to Pay"
                        android:layout_gravity="bottom"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/checkStatusUpiQr"
                        android:layout_alignStart="@+id/checkStatusUpiQr"></Button>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/line"
                style="?android:attr/listSeparatorTextViewStyle"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_above="@+id/bottomLogoLayout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9f9b9b" />
            <LinearLayout
                android:id="@+id/bottomLogoLayout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:orientation="vertical"

                android:background="#ffffff"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/logosCardView"
                    android:layout_width="240dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#ffffff">

                    <ImageView
                        android:id="@+id/imgMC"
                        android:layout_width="64dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/npci" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by PayPhi"
                android:textStyle="bold|italic"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>