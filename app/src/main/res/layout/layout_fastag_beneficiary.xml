<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_addbene_fastag"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/DP100"
                android:layout_height="@dimen/DP100"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/add_contact_circle"
                android:layout_margin="@dimen/DP10"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/enter_fastag_id"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:padding="@dimen/DP8"
                android:textSize="@dimen/SP16"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP8"
                android:layout_marginRight="@dimen/DP8"
                android:background="@drawable/box">

                <EditText
                    android:id="@+id/edittext_account_fastag"
                    android:layout_width="match_parent"
                    android:hint="@string/wallet_id"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/DP40"
                    android:paddingLeft="@dimen/DP8"
                    android:paddingRight="@dimen/DP8"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/enter_bank"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:padding="@dimen/DP8"
                android:textSize="@dimen/SP16"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP8"
                android:layout_marginRight="@dimen/DP8"
                android:layout_marginBottom="@dimen/DP25"
                android:background="@drawable/box">

                <AutoCompleteTextView
                    android:id="@+id/autotxt_bank_fastag"
                    android:layout_width="match_parent"
                    android:hint="@string/enter_bank"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/DP40"
                    android:paddingLeft="@dimen/DP8"
                    android:paddingRight="@dimen/DP8"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_add_fastag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_default"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DP15"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP20"
                android:textAllCaps="false"
                android:textSize="@dimen/SP16"
                android:paddingLeft="@dimen/DP20"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/continu"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/logo"
                    android:padding="@dimen/_15sdp"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>