<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/kotakBlue1"
    tools:context=".Activity.Forget_Password">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/layoutOtp"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please type the verification code sent to"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:inputType="numberPassword"
            android:id="@+id/otpin"
            android:maxLength="6"
            android:hint="Enter OTP"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background"
            android:layout_height="@dimen/DP40"/>

        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/submit1"
            android:layout_gravity="bottom|center"
            android:background="@drawable/box_background4"
            android:textColor="#FFFFFF"
            android:text="Validate"
            android:layout_marginTop="10dp"
            android:layout_height="@dimen/DP40"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPassword"
        android:visibility="gone"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your New Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/opass"
            android:hint="Enter Old Password"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:background="@drawable/box_background"
            android:layout_height="@dimen/DP40"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/upass"
            android:hint="Enter New Password"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:background="@drawable/box_background"
            android:layout_height="@dimen/DP40"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/cpass"
            android:layout_marginBottom="10dp"
            android:hint="Confirm New Password"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_background"
            android:layout_height="@dimen/DP40"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/submit"
            android:layout_gravity="bottom|center"
            android:background="@drawable/box_background4"
            android:textColor="#FFFFFF"
            android:text="Submit"
            android:layout_marginTop="@dimen/DP5"
            android:layout_height="@dimen/DP40"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center"
        android:background="@drawable/login_screen_banner"
        android:layout_alignParentBottom="true"
        android:layout_height="200dp"/>

</RelativeLayout>