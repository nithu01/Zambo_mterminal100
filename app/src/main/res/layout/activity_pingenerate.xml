    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/img"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutOtp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please type the verification code sent to"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:inputType="numberPassword"
        android:id="@+id/otpin"
        android:maxLength="6"
        android:hint="Enter OTP"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_background"
        android:layout_height="@dimen/DP40"/>

        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/submit1"
        android:layout_gravity="bottom|center"
        android:background="@drawable/box_background4"
        android:textColor="#FFFFFF"
        android:text="Validate"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/DP40"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPin"
        android:visibility="gone"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your PIN Code"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:inputType="phone"
        android:id="@+id/upin"
        android:maxLength="6"
        android:hint="Enter PIN"
        android:gravity="center"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:background="@drawable/box_background"
        android:layout_height="@dimen/DP40"/>

    <EditText
        android:layout_width="match_parent"
        android:inputType="phone"
        android:id="@+id/cpin"
        android:maxLength="6"
        android:layout_marginBottom="20dp"
        android:hint="Confirm PIN"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/box_background"
        android:layout_height="@dimen/DP40"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/submit"
        android:layout_gravity="bottom|center"
        android:background="@drawable/box_background4"
        android:textColor="#FFFFFF"
        android:text="Submit"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="@dimen/DP5"
        android:layout_height="@dimen/DP40"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center"
        android:background="@drawable/login_screen_banner"
        android:layout_alignParentBottom="true"
        android:layout_height="150dp"/>
