<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.PMCaresFund">

    <RelativeLayout
        android:id="@+id/toolbar_aeps"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:padding="@dimen/DP10"
            android:src="@drawable/back"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txt__aeps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgback"
            android:text="#IndiaFightsCorona"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:typeface="sans"
            android:layout_toEndOf="@+id/imgback"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_below="@+id/toolbar_aeps"
       android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/screenshot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#1c252c"
                android:text="Help India fight against COVID-19"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#1c252c"
                android:text="The outbreak of pandemic, Corona Virus Disease (COVID-19) in the Country hit the economy. To overcome this difficult situation lets contribute towards PM CARES Fund on Zambo App.\n\n Now it is a time to support the Nation whole heartedly. Show your care and concern."/>

<!--            <TextView-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="18sp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:text="Know More"-->
<!--                android:textColor="#00b8f5"/>-->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="I would like to contribute"
                    android:textColor="#1c252c"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/heart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹500"
                    android:background="@drawable/box_background"
                    android:textColor="#1c252c"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="₹1000"
                    android:background="@drawable/box_background"
                    android:textColor="#1c252c"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹5000"
                    android:background="@drawable/box_background"
                    android:textColor="#1c252c"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="or"
                android:textColor="#00b8f5"/>
            <EditText
                android:layout_width="match_parent"
                android:inputType="phone"
                android:paddingLeft="@dimen/DP10"
                android:id="@+id/amount"
                android:hint="₹ Enter Any Amount"
                android:textStyle="bold"
                android:textColor="#1c252c"
                android:textColorHint="#1c252c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/DP5"
                android:layout_marginBottom="@dimen/_60sdp"
                android:background="@drawable/box_background"
                android:layout_height="@dimen/DP50"/>

        </LinearLayout>
      </ScrollView>
       <Button
           android:layout_width="match_parent"
           android:id="@+id/contribute"
           android:layout_gravity="bottom|center"
           android:background="@color/colorPrimaryDark"
           android:textColor="#FFFFFF"
           android:text="Contribute"
           android:textAllCaps="false"
           android:textSize="20sp"
           android:layout_alignParentBottom="true"
           android:layout_marginTop="@dimen/DP15"
           android:layout_height="@dimen/DP50"/>
   </RelativeLayout>
</RelativeLayout>