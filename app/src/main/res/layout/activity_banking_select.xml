<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".Activity.BankingSelect">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:src="@drawable/aeps_logo"
        android:id="@+id/imageView"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/cardView"
        android:elevation="15dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:src="@drawable/aeps2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/kotakBlue1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branchless Banking"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/aeps_logo"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/CashWithdraw_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/atm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Cash\nWithdraw"
                android:layout_gravity="center"
                android:textColor="@color/lightBlack"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BalanceInquiry_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/money1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Balance\n   inquiry"
                android:layout_gravity="center"
                android:textColor="@color/lightBlack"
                android:textSize="16sp"/>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>