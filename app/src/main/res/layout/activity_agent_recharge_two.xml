<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".Activity.AgentRechargeThree">

    <RelativeLayout
        android:id="@+id/toolbar_agent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgback_agent"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:padding="@dimen/DP10"
            android:src="@drawable/back"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgback_agent"
            android:text="@string/recharge_2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:typeface="sans"
            android:layout_toEndOf="@+id/imgback_agent"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DP5"
        android:padding="@dimen/DP5"
        android:layout_below="@+id/toolbar_agent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/DP4"
        card_view:cardElevation="@dimen/DP5"
        card_view:contentPadding="@dimen/DP4">

        <GridView
            android:id="@+id/gridview_recharge_three_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:horizontalSpacing="@dimen/DP8"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/DP8">

        </GridView>

    </androidx.cardview.widget.CardView>



</RelativeLayout>